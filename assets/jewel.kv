#:import get_color_from_hex kivy.utils.get_color_from_hex

<Label>
    space: 10
    canvas.before:
        Color:
            rgba: get_color_from_hex('E2DDD5')
        Rectangle:
            pos: self.pos[0], self.pos[1]+self.space/2
            size: self.size[0], self.size[1]-self.space
        Rectangle:
            pos: self.pos[0]+self.space/2, self.pos[1]
            size: self.size[0]-self.space, self.size[1]
        Ellipse:
            size: self.space, self.space
            pos: self.pos[0], self.pos[1]
        Ellipse:
            size: self.space, self.space
            pos: self.pos[0], self.pos[1]+self.height-self.space
        Ellipse:
            size: self.space, self.space
            pos: self.pos[0]+self.width-self.space, self.pos[1]
        Ellipse:
            size: self.space, self.space
            pos: self.pos[0]+self.width-self.space, self.pos[1]+self.height-self.space

<CustomScatter>
    pre_pos: 0, 0
    row: 0
    col: 0

<KivyJewel>
    cols: 1
    rows: 2
    spacing: 5, 5

    visual_score_label: visual_score_label
    board: board
    Label:
        id: visual_score_label
        text: '%s'%str(root.score)
        color: get_color_from_hex('58CB85')
        size_hint: 1, None
        halign: "center"
        height: 50
        font_size: 30
        halign: 'right'

    Board:
        id: board
        cols: 10
        rows: 10
        spacing: 3, 3
