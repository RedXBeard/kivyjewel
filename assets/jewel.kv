#:import get_color_from_hex kivy.utils.get_color_from_hex

<Label>
    canvas.before:
        Color:
            rgba: get_color_from_hex('E2DDD5')
        Rectangle:
            pos: self.pos[0], self.pos[1]+5
            size: self.size[0], self.size[1]-10
        Rectangle:
            pos: self.pos[0]+5, self.pos[1]
            size: self.size[0]-10, self.size[1]
        Ellipse:
            size: 10, 10
            pos: self.pos[0], self.pos[1]
        Ellipse:
            size: 10, 10
            pos: self.pos[0], self.pos[1]+self.height-10
        Ellipse:
            size: 10, 10
            pos: self.pos[0]+self.width-10, self.pos[1]
        Ellipse:
            size: 10, 10
            pos: self.pos[0]+self.width-10, self.pos[1]+self.height-10

<KivyJewel>
    cols: 1
    rows: 2
    spacing: 5, 5

    visual_score_label: visual_score_label
    board: board
    Label:
        id: visual_score_label
        text: '%s'%str(root.score)
        color: get_color_from_hex('58CB85')
        size_hint: 1, None
        halign: "center"
        height: 50
        font_size: 30
        halign: 'right'

    Board:
        id: board
        cols: 10
        rows: 10
        spacing: 3, 3
        padding: 0
